<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch06.mapper.User3Mapper">
    <insert id="insert">
        INSERT INTO TB_USER3 VALUES (usId=#{usId}, #{name}, #{age}, #{addr})
    </insert>
    <update id="update">
        UPDATE TB_USER3 SET name=#{name}, age=#{age}, addr=#{addr} WHERE usId=#{usId}
    </update>
    <select id="selectUserById" resultType="kr.co.ch06.dto.User3DTO">
        SELECT * FROM TB_USER3 WHERE usId=#{usId}
    </select>
    <select id="selectAllUsers" resultType="kr.co.ch06.dto.User3DTO">
        SELECT * FROM TB_USER3
    </select>
    <delete id="delete">
        DELETE FROM TB_USER3 WHERE usId=#{usId}
    </delete>

</mapper>